@model ZSPD.Models.EditSurveyViewModel
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

@Html.Partial("_HeaderNavBar", new ViewDataDictionary { { "name", "Edytuj ankietę" } })
@using (Html.BeginForm("Edit", "Surveys"))
{
    @Html.HiddenFor(model => model.Survey.Id);
    for (int i = 0; i < Model.Questions.Count(); i++)
    {
        <div class="checkbox">
            @Html.HiddenFor(model => model.Questions[i].Question.Id)
            @Html.CheckBoxFor(model => model.Questions[i].AddToSurvey)
            @Html.LabelFor(model => model.Questions[i].Question.Content, Model.Questions[i].Question.Content)
        </div>
    }
    <input type="submit" class="col-lg-2 btn-info btn" value="Zapisz" />
}
<a href="~/Surveys/Manage"><button class="col-lg-2 btn-info btn">Wstecz</button></a>
