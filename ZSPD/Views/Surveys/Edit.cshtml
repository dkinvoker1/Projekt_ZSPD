<link href="~/Content/bootstrap.min.css" rel="stylesheet" />



<div class="panel panel-primary">
    <div class="panel-heading">Edytuj ankietę</div>
</div>
<form>
    @for (int i = 1; i < 50; i++)
    {
        <div class="checkbox">
            @if (i <= 30)
            {
                <label><input type="checkbox" checked="checked">Pytanie @i</label>
            }
            else
            {
                <label><input type="checkbox" value="">Pytanie @i</label>
            }
            
        </div>
    }



</form>
