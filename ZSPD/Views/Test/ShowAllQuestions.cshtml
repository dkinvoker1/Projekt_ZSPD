@model IEnumerable<ZSPD.Domain.Models.EntityModels.Question>

@{
    ViewBag.Title = "ShowAllQuestions";
}

<h2>ShowAllQuestions</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th>
           Średnia ocena
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    double averageGrade = 0;
    if (item.Grades.Count != 0)
    {
        averageGrade = item.Grades.Average(x => x.Value);
    }
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Content)
        </td>
        <td>
           @averageGrade
        </td>
    </tr>
}

</table>
