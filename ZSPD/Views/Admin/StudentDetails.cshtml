@model ZSPD.Models.StudentDetailsViewModel
<link href="~/Content/bootstrap.css" rel="stylesheet" />
@{
    ViewBag.Title = "StudentDetails";
}
@Html.Partial("_HeaderNavBar", new ViewDataDictionary { { "name", "Szczegóły" } })

<div>
@using (Html.BeginForm("AddNewSubject", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form"}))
{

    @Html.AntiForgeryToken()
    <hr />
        <div class="col-xs-5">
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                <p class = "col-md-offset-3 col-md-4">@Html.DisplayFor(m => m.ActualStudent.UserName)</p>
                @Html.HiddenFor(m => m.ActualStudent.Id)
            </div>
            <div class="form-group">
                @Html.DropDownListFor(m => m.SelectedSubject, new SelectList(Model.AllSubjects.Select(x => x.Name)), new { @class = "col-md-offset-3 col-md-4"})
            </div>
            <div class="form-group">
                <div class="col-md-offset-4 col-md-8">
                    <input type="submit" class="btn btn-sm btn-primary" value="Zapisz" />
                </div>
            </div>
        </div>
}

@foreach (var subject in Model.AllSubjects)
{
    var userIssues = Model.ActualStudent.SolvedIssues.Where(x => x.graph.Id == subject.Id);
    <table class="table" style="float: left; width: 10%">
        <tr>
            <th>
                @subject.Name
            </th>
        </tr>
        @foreach (var issue in userIssues)
        {
            <tr>
                <td>@issue.issueNumber</td>
            </tr>
        }
    </table>
}

    <div class="container centering-container">
        @Html.ActionLink("Wstecz", "StudentsManage", "Admin", null, new { @class = "own-btn btn-info btn" })
    </div>
